<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/cardview_background"
        android:id="@+id/relativeHome">

            <ImageView
                android:id="@+id/istanbulImage"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/istanbul" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@id/istanbulImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/bottom_corner"
            android:backgroundTint="@color/yellow"
            android:gravity="center"
            android:text="Kalan Bakiye : 30 TL"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:layout_below="@id/relativeHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/transfer"
        android:text="Geçmiş İşlemler"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:id="@+id/buttonHistoryProcess"/>

    <Button
        android:id="@+id/buttonAddMoney"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonHistoryProcess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/money"
        android:text="Para Yükle"
        android:textAllCaps="false"
        android:textColor="@color/black" />
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:layout_below="@id/buttonAddMoney"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/placeholder"
        android:text="Bekleyen Talimatlar"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:id="@+id/buttoneveningProcess"/>







</RelativeLayout>