<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent"
    tools:context=".home.AddMoneyActivity">

    <RelativeLayout
        android:id="@+id/relativeMoney"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/cardview_background">

        <ImageView
            android:id="@+id/istanbulImage"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/istanbul" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yüklemek İstediğiniz Tutar"
        android:layout_below="@id/relativeMoney"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/textAddPrice"/>


    <EditText
        android:id="@+id/editTextAddMoney"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/textAddPrice"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:hint="Tutar giriniz"
        android:gravity="center"
        android:inputType="number"
        android:textSize="16sp"
        android:textColor="@color/black"/>


    <Button
        android:id="@+id/buttonNextPrice"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextAddMoney"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/yellow"
        android:text="Devam Et"
        android:textAllCaps="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/ibbLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/image_one"></ImageView>

        <ImageView
            android:id="@+id/ulakLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/ibbLogo"
            android:src="@drawable/image_two"></ImageView>

    </RelativeLayout>


</RelativeLayout>